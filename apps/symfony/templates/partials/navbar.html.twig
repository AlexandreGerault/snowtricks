                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-900 hover:text-gray-200 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500 transition duration-150 ease-in-out">
                    <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                        <path :class="{'hidden': open, 'inline-flex': ! open }" class="inline-flex"
                              stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16"/>
                        <path :class="{'hidden': ! open, 'inline-flex': open }" class="hidden"
                              stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-between">
                <div class="flex-shrink-0 flex items-center">
                    <a class="text-xl text-gray-900" href="{{ path('app_home') }}">
                        Snowtricks
                    </a>
                </div>
                <div class="hidden sm:block sm:ml-6">
                    <div class="flex space-x-4 text-gray-900">
                        <ul id="menu-header" class="flex space-x-4">
                            <li id="menu-item-9"
                                class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home current-menu-item page_item page-item-5 current_page_item menu-item-9">
                                <a href="{{ path('app_home') }}"
                                   aria-current="page">Accueil</a></li>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li id="menu-item-10"
                                    class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                    <a href="{{ path('ajouter-une-nouvelle-figure') }}">
                                        Ajouter
                                    </a>
                                </li>
                            {% else %}
                                <li id="menu-item-10"
                                    class="menu-item menu-item-type-post_type menu-item-object-page menu-item-10">
                                    <a href="{{ path('app_login') }}">
                                        Connexion
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
